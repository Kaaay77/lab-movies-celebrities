<h2>Edit Movies</h2>
<form action="/movies/{{respons.Movies._id}}" method="post">
<label for="title">Title</label>
    <input id="title" name="title" type="text" value="{{response.Movie.title}}">

    <label for="genre">Genre</label>
    <input id="genre" name="genre" type="text" value="{{response.Movie.genre}}">

    <label for="plot">Plot</label>
    <input id="plot" name="plot" type="text" value="{{response.Movie.plot}}">

    <label for="actor">Actor</label>
    <select name="actor" id="actor" multiple>
        {{#each response.Celebrity}}
            <option value="{{this._id}}">{{this.name}}</option>
         {{/each}}
    </select>

    <button type="submit">Submit</button>
</form>